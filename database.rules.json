{
  "rules": {
    "clients": {
      "$client_id": {
        ".read": "auth != null && auth.uid == $client_id",
        ".write": "auth != null && auth.uid == $client_id"
      }
    },
    "products": {
      ".indexOn": ["averageRating"],
      ".read": "true",
      ".write": "auth != null"
    },
    "orders": {
      "$order_id": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "stores": {
      "$store_id": {
        ".read": "true",
        ".write": "auth != null"
      }
    },
    "reviews": {
      "$review_id": {
        ".read": "true",
        ".write": "auth != null"
      }
    },
    "inventory": {
      "$product_id": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "delivery": {
      "$order_id": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}